{% extends sonata_block.templates.block_base %}
{% block block %}
<div class="row">
    <form action="{{ path('nico_contact_save') }}" method="post" {{ form_enctype(form) }} class="form nico-contact-form">
	<div class="span6">
			{{ form_row(form.civilite) }}
			{{ form_row(form.nom) }}
			{{ form_row(form.prenom) }}
			{{ form_row(form.telephone) }}
			{{ form_row(form.email) }}
	</div>
	<div class="span6">
			{{ form_row(form.message) }}
			<div class="newsletter-field">

				<p>*champs obligatoire</p>
				{{ form_widget(form.newsletter) }}
				{{ form_label(form.newsletter,'Inscription Ã  la Newsletter') }}
			</div>
			{{ form_row(form._token) }}
          <input type="submit" >
	</div>
    </form>
</div>
{% endblock %}